<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="tictactoe.TicTacToeController">
	<children>
		<BorderPane fx:id="border1" styleClass = "otherborders" prefHeight="316.0" prefWidth="398.0">
			<top>
				<Text strokeType="OUTSIDE" strokeWidth="0.0" text="How To Play"
					BorderPane.alignment="CENTER">
					<font>
						<Font size="24.0" />
					</font>
					<BorderPane.margin>
						<Insets top="15.0" />
					</BorderPane.margin>
				</Text>
			</top>
			<center>
				<TextFlow maxHeight="-Infinity" prefHeight="100.0"
					prefWidth="330.0" BorderPane.alignment="TOP_CENTER">
					<children>
						<Text strokeType="OUTSIDE" strokeWidth="0.0"
							text="&#10;&#10;1. Place alternating X's and O's onto the field by clicking the buttons&#10;    on the 3x3 grid&#10;&#10;2. The first person to get 3 X's or 3 O's in a row wins!&#10;&#10;3. Have Fun!&#10;" />
					</children>
					<BorderPane.margin>
						<Insets left="15.0" right="15.0" top="5.0" />
					</BorderPane.margin>
				</TextFlow>
			</center>
			<bottom>
				<Button fx:id="howToClose" mnemonicParsing="false" onAction="#howToCloser"
					prefHeight="68.0" prefWidth="128.0" text="OK!"
					BorderPane.alignment="CENTER">
					<BorderPane.margin>
						<Insets bottom="20.0" />
					</BorderPane.margin>
					<font>
						<Font name="System Bold Italic" size="32.0" />
					</font>
				</Button>
			</bottom>
		</BorderPane>
	</children>
</AnchorPane>
